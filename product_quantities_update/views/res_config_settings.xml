<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.product.quantities.update</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='sale_management']" position="inside">
                    <h2>Connection settings</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_panel">
                                <label for="rkbbearings_end_point_url" string="End Point URL"/>
                                <div class="oe_inline">
                                    <field name="rkbbearings_end_point_url"/>
                                </div>
                                <label for="rkbbearings_user" string="User"/>
                                <div class="oe_inline">
                                    <field name="rkbbearings_user"/>
                                </div>
                                <label for="rkbbearings_user_key" string="User key"/>
                                <div class="oe_inline">
                                    <field name="rkbbearings_user_key"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_panel">
                                <label for="planned_date_switzerland" string="Planned date Switzerland"/>
                                <div class="oe_inline">
                                    <field name="planned_date_switzerland"/>
                                </div>

                                <label for="planned_date_italy" string="Planned date Italy"/>
                                <div class="oe_inline">
                                    <field name="planned_date_italy"/>
                                </div>

                                <label for="planned_date_romania" string="Planned date Romania"/>
                                <div class="oe_inline">
                                    <field name="planned_date_romania"/>
                                </div>
                            </div>
                        </div>


                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
