<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="resource_calendar_form_inherited" model="ir.ui.view">
            <field name="name">resource_calendar_form_inherited</field>
            <field name="model">resource.calendar</field>
            <field name="inherit_id" ref="resource.resource_calendar_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='two_weeks_calendar']" position="after">
                    <group>
                        <field name="number_of_days" groups="base.group_no_one"/>
                    </group>
                </xpath>

            </field>
        </record>

    </data>
</odoo>