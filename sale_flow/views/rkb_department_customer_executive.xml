<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="rkb_department_customer_executive_tree" model="ir.ui.view">
        <field name="name">rkb.department.customer.executive.tree</field>
        <field name="model">rkb.department.customer.executive</field>
        <field name="arch" type="xml">
            <tree string="Status/Customer's activity">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="rkb_department_customer_executive_form" model="ir.ui.view">
        <field name="name">rkb.department.customer.executive.form</field>
        <field name="model">rkb.department.customer.executive</field>
        <field name="arch" type="xml">
            <form string="Department of Customer's executive">
                <group>
                    <field name="name" attrs="{'required': True}"/>
                </group>
            </form>
        </field>
    </record>

    <record id="rkb_department_customer_executive_act" model="ir.actions.act_window">
        <field name="name">Department of Customer's executive</field>
        <field name="res_model">rkb.department.customer.executive</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="rkb_department_customer_executive_tree"/>
    </record>

    <menuitem id="menu_rkb_department_customer_executive_act" action="rkb_department_customer_executive_act" sequence="10" parent="contacts.res_partner_menu_config"/>

</odoo>