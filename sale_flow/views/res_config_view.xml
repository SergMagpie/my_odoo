<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Settings Form -->
        <record id="res_config_simbioz_rkb_form_view" model="ir.ui.view">
            <field name="name">res.config.simbioz.rkb.form.view</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='purchase']" position="inside">
                    <h2>RKB Configuration</h2>
                    <group>
                        <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-6 o_setting_box" title="Enter your Login below.">
                                <div class="o_setting_right_pane">
                                    <label for="default_login"/>
                                    <div class="text-muted">
                                        Enter your Login below.
                                    </div>
                                    <div class="content-group">
                                        <div class="mt16">
                                            <field name="default_login" class="o_light_label"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-6 o_setting_box" title="Enter your Password below.">
                                <div class="o_setting_right_pane">
                                    <label for="default_password"/>
                                    <div class="text-muted">
                                        Enter your password below.
                                    </div>
                                    <div class="content-group">
                                        <div class="mt16">
                                            <field name="default_password" class="o_light_label" password="True"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </group>

                </xpath>
            </field>
        </record>

    </data>
</odoo>