<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="lead_customer_aim_tree" model="ir.ui.view">
        <field name="name">lead.customer.aim.tree</field>
        <field name="model">rkb.lead.customer.aim</field>
        <field name="arch" type="xml">
            <tree string="Customer aims">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="lead_customer_aim_form" model="ir.ui.view">
        <field name="name">lead.customer.aim.form</field>
        <field name="model">rkb.lead.customer.aim</field>
        <field name="arch" type="xml">
            <form string="Customer aims">
                <group>
                    <field name="name"/>
                </group>
            </form>
        </field>
    </record>

    <record id="lead_customer_aim_act" model="ir.actions.act_window">
        <field name="name">Customer aims</field>
        <field name="res_model">rkb.lead.customer.aim</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="lead_customer_aim_tree"/>
    </record>

    <menuitem id="menu_lead_customer_aim_act"
              action="lead_customer_aim_act"
              sequence="10"
              parent="crm.menu_crm_config_lead"/>

</odoo>