<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="rkb_customer_activity_tree" model="ir.ui.view">
        <field name="name">rkb.customer.activity.tree</field>
        <field name="model">rkb.customer.activity</field>
        <field name="arch" type="xml">
            <tree string="Status/Customer's activity">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="rkb_customer_activity_form" model="ir.ui.view">
        <field name="name">rkb.customer.activity.form</field>
        <field name="model">rkb.customer.activity</field>
        <field name="arch" type="xml">
            <form string="Status/Customer's activity">
                <group>
                    <field name="name" attrs="{'required': True}"/>
                </group>
            </form>
        </field>
    </record>

    <record id="rkb_customer_activity_act" model="ir.actions.act_window">
        <field name="name">Status/Customer's activity</field>
        <field name="res_model">rkb.customer.activity</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="rkb_customer_activity_tree"/>
    </record>

    <menuitem id="menu_rkb_customer_activity_act" action="rkb_customer_activity_act" sequence="10" parent="contacts.res_partner_menu_config"/>

</odoo>