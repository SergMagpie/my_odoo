<?xml version="1.0"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="product_to_crm_lead_wizard_form">
            <field name="name">product.to.crm.lead.wizard.form</field>
            <field name="model">product.to.crm.lead.wizard</field>
            <field name="arch" type="xml">
                <form string="Add To Lead/Opportunity">
                    <group>
                        <field name="crm_lead_id" class="oe_inline"
                            attrs="{'invisible': [('crm_lead_new', '!=', False)], 'required': [('crm_lead_new', '=', False)]}"
                        />
                        <field name="crm_lead_new" class="oe_inline"
                            attrs="{'invisible': [('crm_lead_id', '!=', False)]}"
                        />
                        <field name="crm_lead_new_name" class="oe_inline"
                            attrs="{'invisible': [('crm_lead_new', '=', False)], 'required': [('crm_lead_new', '!=', False)]}"
                        />
                        <field name="crm_lead_new_partner_id" class="oe_inline"
                            attrs="{'invisible': [('crm_lead_new', '=', False)], 'required': [('crm_lead_new', '!=', False)]}"
                        />
                    </group>
                    <field name="line_ids">
                        <tree editable="top">
                            <field name="name" />
                            <field name="qty" />
                        </tree>
                    </field>
                    <footer>
                        <button name="action_apply" type="object" string="Apply and Proceed" class="oe_highlight"/>
                        or
                        <button name="action_apply_and_view" type="object" string="Apply and View" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="product_to_crm_lead_wizard_act">
            <field name="name">Add To Lead/Opportunity</field>
            <field name="res_model">product.to.crm.lead.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="product_to_crm_lead_wizard_form"/>
            <field name="target">new</field>
        </record>

        <act_window id="action_product_to_crm_lead_wizard"
            multi="True"
            key2="client_action_multi" name="Add To Lead/Opportunity"
            res_model="product.to.crm.lead.wizard" src_model="product.template"
            view_mode="form" target="new" view_type="form"
            />

    </data>
</openerp>