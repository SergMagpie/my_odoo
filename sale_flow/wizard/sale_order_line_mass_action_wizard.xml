<?xml version="1.0" encoding="utf-8"?>
    <odoo>

        <record id="sale_order_line_mass_action_wizard" model="ir.ui.view">
            <field name="name">sale.order.line.mass.action.wizard.form</field>
            <field name="model">sale.order.line.mass.action.wizard</field>
            <field name="arch" type="xml">
                <form string="Set Date Planned">
                    <group>
                        <group>
                            <field name="rkb_date_planned" required="1" class="oe_inline"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Apply" name="apply_action" type="object" class="btn-primary"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </odoo>