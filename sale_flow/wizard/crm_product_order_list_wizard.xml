<?xml version="1.0" encoding="utf-8"?>
    <odoo>

        <record id="crm_product_order_list_wizard" model="ir.ui.view">
            <field name="name">crm.product.order.list.wizard.form</field>
            <field name="model">crm.product.order.list.wizard</field>
            <field name="arch" type="xml">
                <form string="Import Product (name, quantity) .XLS(x)">
                    <group>
                        <group>
                            <field name="file_data" filename="file_name" widget="binary" required="1" class="oe_inline"/>
                        </group>
                        <field name="file_name" invisible="1"/>
                    </group>
                    <footer>
                        <button string="Import" name="import_button" type="object" class="btn-primary"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


    </odoo>