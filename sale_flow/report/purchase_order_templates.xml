<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="report_purchaseorder_document" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//div[3]" position="replace">
            <div class="row mt32 mb32">
                <table class="table">
                    <tbody>
                        <tr t-if="o.name">
                            <div class="col-xs-3">
                                <strong>Our Order Reference:</strong>
                                <p t-field="o.name"/>
                            </div>
                        </tr>
                        <tr t-if="o.partner_ref">
                            <div class="col-xs-3">
                                <strong>Your Order Reference:</strong>
                                <p t-field="o.partner_ref"/>
                            </div>
                        </tr>
                        <tr t-if="o.date_order">
                            <div class="col-xs-3">
                                <strong>Order Date:</strong>
                                <p t-field="o.date_order"/>
                            </div>
                        </tr>
                        <tr t-if="o.incoterm_id">
                            <div class="col-xs-3">
                                <strong>Incoterm</strong>
                                <p t-field="o.incoterm_id"/>
                            </div>
                        </tr>
                        <tr t-if="o.payment_term_id">
                            <div class="col-xs-3">
                                <strong>Payment Terms</strong>
                                <p t-field="o.payment_term_id"/>
                            </div>
                        </tr>
                        <tr t-if="o.rkb_quote_number">
                            <div class="col-xs-3">
                                <strong>RFQ Number From RKB</strong>
                                <p t-field="o.rkb_quote_number"/>
                            </div>
                        </tr>
                        <tr t-if="o.rkb_date">
                            <div class="col-xs-3">
                                <strong>Date</strong>
                                <p t-field="o.rkb_date"/>
                            </div>
                        </tr>
                        <tr t-if="o.rkb_crm">
                            <div class="col-xs-3">
                                <strong>CRM</strong>
                                <p t-field="o.rkb_crm"/>
                            </div>
                        </tr>
                        <tr t-if="o.rkb_operator">
                            <div class="col-xs-3">
                                <strong>Operator</strong>
                                <p t-field="o.rkb_operator"/>
                            </div>
                        </tr>
                    </tbody>
                </table>
            </div>
        </xpath>
    </template>

</odoo>
